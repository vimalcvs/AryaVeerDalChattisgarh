          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="2dp"
              android:gravity="center"
              android:padding="3dp"
              android:text="@string/aaryaveerdal"
              android:textSize="20sp"
              android:textStyle="bold"/>
        </LinearLayout>
      </com.google.android.material.card.MaterialCardView>

      <com.google.android.material.card.MaterialCardView
          android:id="@+id/card8"
          android:layout_width="0dp"
          android:layout_height="0dp"
          android:layout_columnWeight="1"
          android:layout_rowWeight="1"
          style="?attr/materialCardViewElevatedStyle"
          android:layout_margin="5dp"
          >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_margin="16dp"
            android:orientation="vertical">

          <com.google.android.material.imageview.ShapeableImageView
              android:layout_width="?listPreferredItemHeightLarge"
              android:layout_height="?listPreferredItemHeightLarge"
              android:layout_gravity="center"
              android:adjustViewBounds="true"

              app:shapeAppearanceOverlay="@style/ShapeCornerCut"
              android:src="@drawable/newwlogo" />

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="2dp"
              android:gravity="center"
              android:padding="3dp"
              android:text="@string/aaryaveerangnadal"
              android:textSize="18sp"
              android:textStyle="bold"/>
        </LinearLayout>
      </com.google.android.material.card.MaterialCardView>
      <com.google.android.material.card.MaterialCardView
          android:id="@+id/card9"
          android:layout_width="0dp"
          android:layout_height="0dp"
          android:layout_columnWeight="1"
          android:layout_rowWeight="1"
          style="?attr/materialCardViewElevatedStyle"
          android:layout_margin="5dp"
          >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_margin="16dp"
            android:orientation="vertical">

          <com.google.android.material.imageview.ShapeableImageView
              android:layout_width="?listPreferredItemHeightLarge"
              android:layout_height="?listPreferredItemHeightLarge"
              android:layout_gravity="center"
              android:adjustViewBounds="true"

              app:shapeAppearanceOverlay="@style/ShapeCornerCut"
              android:src="@drawable/social_media" />

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="2dp"
              android:gravity="center"
              android:padding="3dp"
              android:text="@string/hamse_sampark_karen"
              android:textSize="20sp"
              android:textStyle="bold"/>
        </LinearLayout>
      </com.google.android.material.card.MaterialCardView>

      <com.google.android.material.card.MaterialCardView
          android:id="@+id/card10"
          android:layout_width="0dp"
          android:layout_height="0dp"
          android:layout_columnWeight="1"
          android:layout_rowWeight="1"
          style="?attr/materialCardViewElevatedStyle"
          android:layout_margin="5dp"
          >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_margin="16dp"
            android:orientation="vertical">

          <com.google.android.material.imageview.ShapeableImageView
              android:layout_width="?listPreferredItemHeightLarge"
              android:layout_height="?listPreferredItemHeightLarge"
              android:layout_gravity="center"
              android:adjustViewBounds="true"

              app:shapeAppearanceOverlay="@style/ShapeCornerCut"
              android:src="@drawable/question" />

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="0dp"
              android:gravity="center"
              android:padding="3dp"
              android:text="नया संकरण जल्द ही आएगा "
              android:textSize="18sp"
              android:textStyle="bold"/>

        </LinearLayout>

      </com.google.android.material.card.MaterialCardView>

    </GridLayout>

  </LinearLayout>

</androidx.core.widget.NestedScrollView>